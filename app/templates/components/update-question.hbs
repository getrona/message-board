{{#if updateQuestionForm}}
  <h4>Update {{question.query}}? Submitted by: {{question.name}}</h4>
  <div>
    <form>

      <div class="form-group">
        <label for="name">New Name:</label>
        {{input value=name id="name" placeholder=question.name}}
      </div>

      <div class="form-group">
        <label for="query">Edit Question:</label>
        {{input value=query id="query" placeholder=question.query}}
      </div>

      <div class="form-group">
        <label for="note">New Additional Notes</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>
      
      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
